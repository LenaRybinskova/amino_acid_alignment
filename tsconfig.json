{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["common/utils/*"],
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "common/*": ["common/*"]
    },
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}